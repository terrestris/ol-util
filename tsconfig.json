{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "rootDir": "./src/",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "es7",
      "dom",
      "esnext"
    ],
    "module": "ES2022",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2022"
  },
  "include": [
    "src"
  ]
}
